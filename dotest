cd test/
 
for i in *.c
do
   echo "$i"  " compile"  
   ../minic "$i" 
done

  echo "*-----------------------------------------------------------------*"
  echo "*-----------------------------execution---------------------------*" 
  echo "*-----------------------------------------------------------------*"
   
for i in *.s
do
   echo "$i"  " execute"      
   java -jar Mars_4_2.jar "$i"
   if [ "$?" = "0" ]; then
	echo "ok"
   else 
	echo " -- bad !"
   fi
done

for i in *.s
do
   echo "$i" + " cleaned "
   echo "*----------------------------------------------------------*"   
   rm "$i"
done

exit 0
